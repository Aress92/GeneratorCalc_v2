# =============================================================================
# FORGLASS REGENERATOR OPTIMIZER - ENVIRONMENT CONFIGURATION
# =============================================================================
# Kopiuj ten plik do .env i dostosuj wartości do swojego środowiska

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=true
API_V1_STR=/api/v1
SERVER_NAME=Forglass Regenerator Optimizer
SERVER_HOST=http://localhost
PROJECT_NAME=Forglass Regenerator Optimizer
VERSION=1.0.0

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
ACCESS_TOKEN_EXPIRE_MINUTES=480
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
BACKEND_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=mysql+aiomysql://fro_user:fro_password@localhost:3306/fro_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# MySQL specific (for docker-compose)
MYSQL_ROOT_PASSWORD=root_password
MYSQL_DATABASE=fro_db
MYSQL_USER=fro_user
MYSQL_PASSWORD=fro_password

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@company.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@company.com
EMAILS_FROM_NAME=Forglass Regenerator Optimizer

# =============================================================================
# FILE STORAGE SETTINGS
# =============================================================================
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=104857600
ALLOWED_EXTENSIONS=.xlsx,.xls,.json

# =============================================================================
# OPTIMIZATION SETTINGS
# =============================================================================
DEFAULT_OPTIMIZATION_TIMEOUT=3600
MAX_PARALLEL_OPTIMIZATIONS=10
OPTIMIZATION_CHECKPOINT_INTERVAL=10

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
SENTRY_DSN=

# =============================================================================
# MONITORING SETTINGS
# =============================================================================
PROMETHEUS_METRICS_PATH=/metrics
ENABLE_METRICS=true
GRAFANA_ADMIN_PASSWORD=admin_password

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_PHYSICS_SOLVER_PYOMO=false
ENABLE_EXPERIMENTAL_ALGORITHMS=false
ENABLE_ML_PREDICTIONS=false

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=Forglass Regenerator Optimizer
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_TELEMETRY_DISABLED=1

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Tylko dla środowiska deweloperskiego
NODE_ENV=development

CELERY_BROKER_URL=redis://redis:6379/1
# Frontend public entry (what the BROWSER can reach)
PUBLIC_BASE_URL=http://localhost

