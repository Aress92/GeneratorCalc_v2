{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "Database": {
    "UseSqlite": true
  },
  "ConnectionStrings": {
    "SqliteConnection": "fro_dev.db",
    "DefaultConnection": "Server=localhost;Port=3306;Database=fro_db;User=fro_user;Password=fro_password;",
    "Redis": "localhost:6379,abortConnect=false"
  },
  "JwtSettings": {
    "Secret": "your-super-secret-jwt-key-minimum-32-characters-long-change-in-production",
    "Issuer": "Forglass.RegeneratorOptimizer",
    "Audience": "Forglass.RegeneratorOptimizer.API",
    "ExpirationMinutes": 1440,
    "RefreshTokenExpirationDays": 7
  },
  "Hangfire": {
    "WorkerCount": 4,
    "DashboardPath": "/hangfire",
    "DashboardTitle": "Forglass Regenerator Optimizer - Background Jobs",
    "EnableDashboardAuthorization": true
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:8000"
    ]
  },
  "OptimizerService": {
    "BaseUrl": "http://localhost:8001",
    "TimeoutSeconds": 300,
    "RetryCount": 3,
    "RetryDelaySeconds": 2
  }
}
